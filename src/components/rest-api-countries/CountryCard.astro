---
interface Props {
  name: string;
  flagImg: string;
  population: number;
  region: string;
  capital: string;
}

const { name, flagImg, population, region, capital } = Astro.props;

---

<div class="country-card">
  <img src={flagImg} alt={name + " Flag"}/>
  <h2>{name}</h2>
  <div class="country-card-details">
    <p>Population: <span>{population}</span></p>
    <p>Region: <span>{region}</span></p>
    <p>Capital: <span>{capital}</span></p>
  </div>
</div>

<style>
  .country-card {
    background-color: hsl(0, 0%, 100%);
    box-shadow: var(--shadow);
    border-radius: var(--radius);
  }

  .country-card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 5px 5px 0 0;
  }

  .country-card h2 {
    padding: 1rem;
    font-size: 1.1rem;
  }

  .country-card-details {
    padding: 0rem 1rem 2rem 1rem;
  }

  .country-card p {
    font-size: 0.9rem;
    font-weight: 500;
  }

  .country-card span {
    font-weight: 300;
  }
</style>
